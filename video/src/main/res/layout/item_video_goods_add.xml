<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_avatar_test"
        />

    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="90dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111111"
            android:textColor="@color/red"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/price_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="1111"
            android:textColor="@color/gray3"
            android:textSize="13sp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="14dp"
        android:src="@mipmap/icon_check_0"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#eee"
        />
</FrameLayout>