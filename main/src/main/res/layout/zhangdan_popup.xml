<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="19dp"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="账单"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:onClick="backClick"
                android:padding="9dp"
                android:src="@mipmap/icon_back"
                android:tint="@color/textColor" />

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="#E4E3E3"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:visibility="invisible">

        <TextView
            android:id="@+id/chooseTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arrow_bottom"
            android:drawablePadding="@dimen/dp_20"
            android:gravity="center"
            android:text="全部爱豆"
            android:textColor="@color/textColor"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/zhichuTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出：30"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shouruTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="收入：300"
                android:textColor="@color/textColor"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contentLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_m_10"
        android:background="@drawable/bg_white_stroke_conners"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_vertical"
            android:text="全部爱豆"
            android:textColor="#8D8D8D"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_vertical"
            android:text="充值爱豆"
            android:textColor="#8D8D8D"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_vertical"
            android:text="推荐爱豆"
            android:textColor="#8D8D8D"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_vertical"
            android:text="管理爱豆"
            android:textColor="#8D8D8D"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_vertical"
            android:text="打赏爱豆"
            android:textColor="#8D8D8D"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_vertical"
            android:text="释放爱豆"
            android:textColor="#8D8D8D"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:gravity="center_vertical"
            android:text="兑换爱豆"
            android:textColor="#8D8D8D"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>