<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/con_group_wrap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/bg_user_home_detail_1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/votes_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="13dp"
                    android:background="@mipmap/icon_live_user_list_1"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar_con_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_user_home_avatar_empty"
                        app:riv_oval="true"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/icon_live_user_list_2"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar_con_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_user_home_avatar_empty"
                        app:riv_oval="true"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/icon_live_user_list_3"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar_con_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_user_home_avatar_empty"
                        app:riv_oval="true"
                        />
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/guard_group_wrap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_user_home_detail_2"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="@string/guard_list"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="13dp"
                    android:background="@mipmap/icon_live_user_list_1"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar_guard_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_user_home_avatar_empty"
                        app:riv_oval="true"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/icon_live_user_list_2"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar_guard_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_user_home_avatar_empty"
                        app:riv_oval="true"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/icon_live_user_list_3"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/avatar_guard_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="2dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_user_home_avatar_empty"
                        app:riv_oval="true"
                        />
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_user_home_detail_title"
        android:paddingLeft="8dp"
        android:text="@string/impress"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        android:textStyle="bold"
        />

    <FrameLayout
        android:id="@+id/btn_impress"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/impress_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            />

        <TextView
            android:id="@+id/no_impress_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/impress_tip_3"
            android:textColor="@color/gray1"
            android:textSize="13sp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/impress_arrow"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical|right"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_arrow_right"
            android:tint="#DCDCDC"
            android:translationY="-3dp"
            android:visibility="invisible"
            />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_user_home_detail_title"
        android:paddingLeft="8dp"
        android:text="@string/user_sign"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor2"
        android:textSize="13sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_user_home_detail_title"
        android:paddingLeft="8dp"
        android:text="@string/user_info"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor2"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/textColor2"
        android:textSize="13sp"
        />


</LinearLayout>