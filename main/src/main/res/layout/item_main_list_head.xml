<?xml version="1.0" encoding="utf-8"?>
<com.yunbao.common.custom.MyFrameLayout2
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:mfl_offestY="-110dp"
    app:mfl_ratio="1.13067"
    >

    <com.yunbao.common.custom.RatioImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_list"
        android:translationY="-110dp"
        app:ri_ratio="1.13067"
        />

    <FrameLayout
        android:id="@+id/item_1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <RelativeLayout
            android:id="@+id/data_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/wrap_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_main_list_head_1"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar_1"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignBottom="@id/wrap_1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                />

            <TextView
                android:id="@+id/name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wrap_1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <LinearLayout
                android:id="@+id/group_1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/name_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                >

                <ImageView
                    android:id="@+id/sex_1"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/level_1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/votes_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

            <com.yunbao.common.custom.MyRadioButton
                android:id="@+id/btn_follow_1"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_below="@id/votes_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_btn_follow_2"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                />
        </RelativeLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="43dp"
        >

        <RelativeLayout
            android:id="@+id/data_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/wrap_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/icon_main_list_head_2"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar_2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignBottom="@id/wrap_2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                />

            <TextView
                android:id="@+id/name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wrap_2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <LinearLayout
                android:id="@+id/group_2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/name_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                >

                <ImageView
                    android:id="@+id/sex_2"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/level_2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/votes_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

            <com.yunbao.common.custom.MyRadioButton
                android:id="@+id/btn_follow_2"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_below="@id/votes_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_btn_follow_2"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/no_data_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            >

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/icon_main_list_no_data"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/main_list_no_data_2"
                android:textColor="@color/white"
                android:textSize="14sp"
                />


        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="62dp"
        >

        <RelativeLayout
            android:id="@+id/data_group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/wrap_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/icon_main_list_head_3"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar_3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignBottom="@id/wrap_3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                />

            <TextView
                android:id="@+id/name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wrap_3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <LinearLayout
                android:id="@+id/group_3"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/name_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                >

                <ImageView
                    android:id="@+id/sex_3"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/level_3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/votes_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

            <com.yunbao.common.custom.MyRadioButton
                android:id="@+id/btn_follow_3"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_below="@id/votes_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_btn_follow_2"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/no_data_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            >

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/icon_main_list_no_data"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/main_list_no_data_2"
                android:textColor="@color/white"
                android:textSize="14sp"
                />


        </LinearLayout>

    </FrameLayout>
</com.yunbao.common.custom.MyFrameLayout2>